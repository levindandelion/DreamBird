.container{
  position:relative;
  height:100vh;
}

.city{
  position:relative;
}

.city .item .item-content{
  padding:0 40rpx;
  display:flex;
  justify-content:space-between;
  align-items: center;
  height: 140rpx;
  font-size:32rpx;
}
.city .item-delete{
  padding:20rpx 30rpx;
  font-weight:bold;
  border-radius: 40%;
}
.city .item-delete:active{
  background: #eee;
  box-shadow:0 0 6rpx 1rpx #eee;
}
.city .item-name{
  display: flex;
  align-items:center;
}
.city .item-icon{
  padding-top:8rpx;
  padding-right:8rpx;
}
.city .active{
  position:absolute;
  left:0rpx;
  width:100%;
  border-top:1px solid #eee;
  opacity:.9;
  box-shadow:0 0 6rpx 1rpx #eee;
}
.add{
  width:80%;
  border:1px dashed #eee;
  border-radius:10rpx;
  height:140rpx;
  margin:auto;
  text-align: center;
  padding-top:40rpx;
}
.add:active{
  box-shadow:0 0 6rpx 1rpx #eee;
}

.container .tips{
  text-align: center;
  font-size:20rpx;
  color: #eee;
  padding:60rpx 20rpx;

}
.box{
  position: absolute;
  top:420rpx;
  left:0;
  width:100%;
}
